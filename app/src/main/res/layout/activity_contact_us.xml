<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"


    >

    <data>

        <variable
            name="model"
            type="com.technology.circles.apps.omanmade.models.AppDataModel" />
        <variable
            name="lang"
            type="String" />

        <variable
            name="backListener"
            type="com.technology.circles.apps.omanmade.interfaces.Listeners.BackListener" />
    </data>
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:fitsSystemWindows="true"
        android:background="@drawable/bg"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="170dp"
                android:layout_height="40dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="20dp"
                app:cardElevation="3dp"
                app:contentPadding="5dp"
                android:layout_margin="8dp"
                android:onClick="@{()->backListener.back()}"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:clickable="false"
                    android:longClickable="false"
                    >
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_left_arrow"
                        android:padding="5dp"
                        android:rotation='@{lang.equals("ar")?180:0}'
                        android:clickable="false"
                        android:longClickable="false"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:text="@string/contact_us"
                        android:textStyle="bold"
                        android:clickable="false"
                        android:longClickable="false"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <fragment
                android:id="@+id/map"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:name="com.technology.circles.apps.omanmade.activities_fragments.FragmentMapTouchListener"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:weightSum="2"

                >

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight=".7"
                    app:cardBackgroundColor="@color/colorPrimary"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="3dp"
                    app:contentPadding="5dp"
                    android:layout_margin="8dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        >
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_call"
                            android:padding="5dp"
                            android:tint="@color/white"

                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:textColor="@color/white"
                            android:textSize="13sp"
                            android:text="@string/phone"
                            android:textStyle="bold"
                            />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1.3"
                    android:layout_height="wrap_content"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="0dp"
                    app:cardBackgroundColor="@color/transparent"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"

                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background='@{lang.equals("ar")?@drawable/chat_right_bg:@drawable/chat_left_bg,default=@drawable/chat_left_bg}'
                        android:paddingLeft="40dp"
                        android:paddingRight="40dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:layout_marginTop="5dp"
                            android:text='@{model.mob_number1??""}'

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:layout_marginTop="5dp"
                            android:text='@{model.mob_number2??""}'


                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:text='@{model.mob_number3??""}'

                            />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:weightSum="2"

                >

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight=".7"
                    android:layout_height="40dp"
                    app:cardBackgroundColor="@color/colorPrimary"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="3dp"
                    app:contentPadding="5dp"
                    android:layout_margin="8dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        >
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_pin"
                            android:padding="5dp"
                            android:tint="@color/white"

                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:textColor="@color/white"
                            android:textSize="13sp"
                            android:text="@string/address"
                            android:textStyle="bold"
                            />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1.3"
                    android:layout_height="wrap_content"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="0dp"
                    app:cardBackgroundColor="@color/transparent"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"

                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background='@{lang.equals("ar")?@drawable/chat_right_bg:@drawable/chat_left_bg,default=@drawable/chat_left_bg}'
                        android:paddingLeft="40dp"
                        android:paddingRight="40dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:layout_marginTop="5dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:text='@{model.address??""}'


                            />





                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:weightSum="2"

                >

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight=".7"
                    android:layout_height="40dp"
                    app:cardBackgroundColor="@color/colorPrimary"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="3dp"
                    app:contentPadding="5dp"
                    android:layout_margin="8dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        >
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_email"
                            android:padding="5dp"
                            android:tint="@color/white"

                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:textColor="@color/white"
                            android:textSize="13sp"
                            android:text="@string/email"
                            android:textStyle="bold"
                            />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1.3"
                    android:layout_height="wrap_content"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="0dp"
                    app:cardBackgroundColor="@color/transparent"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"

                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background='@{lang.equals("ar")?@drawable/chat_right_bg:@drawable/chat_left_bg,default=@drawable/chat_left_bg}'
                        android:paddingLeft="40dp"
                        android:paddingRight="40dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:layout_marginTop="5dp"

                            android:text='@{model.email1??""}'

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:text='@{model.email2??""}'

                            />




                    </LinearLayout>


                </androidx.cardview.widget.CardView>

            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="3dp"
                app:contentPadding="8dp"
                app:cardCornerRadius="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="8dp"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:text="@string/send_a_message"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="5dp"
                        android:background="@drawable/small_rounded"
                        android:layout_marginTop="15dp"


                        >
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_user"
                            android:padding="8dp"

                            />
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="33dp"
                            android:singleLine="true"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:hint="@string/name"
                            android:textColorHint="@color/gray5"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:background="@color/white"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="5dp"
                        android:background="@drawable/small_rounded"
                        android:layout_marginTop="8dp"


                        >
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_email"
                            android:padding="8dp"

                            />
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="33dp"
                            android:singleLine="true"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:hint="@string/email"
                            android:textColorHint="@color/gray5"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:background="@color/white"
                            android:inputType="textEmailAddress"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="5dp"
                        android:background="@drawable/small_rounded"
                        android:layout_marginTop="8dp"


                        >
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_pen"
                            android:padding="8dp"

                            />
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="33dp"
                            android:singleLine="true"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:hint="@string/subject"
                            android:textColorHint="@color/gray5"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:background="@color/white"
                            />
                    </LinearLayout>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:singleLine="true"
                        android:padding="8dp"
                        android:hint="@string/message"
                        android:textColorHint="@color/gray5"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:background="@drawable/small_rounded"
                        android:layout_marginTop="8dp"
                        android:gravity="top"
                        android:inputType="textMultiLine"
                        />


                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/btn_search"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:text="@string/send"
                        />


                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </ScrollView>
</layout>
