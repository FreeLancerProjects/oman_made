<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <data>
        <variable
            name="lang"
            type="String" />
        <variable
            name="backListener"
            type="com.technology.circles.apps.omanmade.interfaces.Listeners.BackListener" />
        <variable
            name="model"
            type="com.technology.circles.apps.omanmade.models.BusinessDataModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        android:orientation="vertical"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="170dp"
            android:layout_height="40dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="20dp"
            app:cardElevation="3dp"
            app:contentPadding="5dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="10dp"
            android:onClick="@{()->backListener.back()}"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:clickable="false"
                android:longClickable="false"
                >
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_left_arrow"
                    android:padding="5dp"
                    android:rotation='@{lang.equals("ar")?180:0}'
                    android:clickable="false"
                    android:longClickable="false"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:text="@string/details"
                    android:textStyle="bold"
                    android:clickable="false"
                    android:longClickable="false"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:fitsSystemWindows="true"
            >
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <LinearLayout
                    android:id="@+id/llContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    >
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="8dp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                >
                                <com.makeramen.roundedimageview.RoundedImageView
                                    android:id="@+id/image"
                                    android:layout_width="match_parent"
                                    android:layout_height="200dp"
                                    app:riv_mutate_background="true"
                                    app:riv_border_width="0dp"
                                    app:riv_corner_radius_top_left="8dp"
                                    app:riv_corner_radius_top_right="8dp"
                                    mediaImage="@{model.cmb2.listing_business_general.listing_featured_image}"
                                    />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    >
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:gravity="center"
                                        android:letterSpacing="8"
                                        tools:ignore="UnusedAttribute"
                                        textColor="@{model.cmb2.listing_business_branding.listing_brand_color}"

                                        />
                                </LinearLayout>


                            </FrameLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginTop="10dp"
                                android:textColor="@color/gray5"
                                android:textSize="13sp"
                                android:text='@{model.cmb2.listing_business_general.listing_description}'

                                />




                            <com.iarcuschin.simpleratingbar.SimpleRatingBar
                                android:id="@+id/rateBar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srb_isIndicator="true"
                                app:srb_stepSize=".5"
                                app:srb_starSize="20dp"
                                app:srb_starsSeparation="5dp"
                                app:srb_numberOfStars="5"
                                app:srb_starBorderWidth="3"
                                android:layout_marginEnd="10dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_gravity="end|center_vertical"

                                />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="top"
                                android:layout_marginTop="20dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginBottom="10dp"
                                >
                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_pin"
                                    android:tint="@color/colorPrimary"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginEnd="8dp"
                                    android:textSize="14sp"
                                    android:textColor="@color/black"
                                    android:text='@{model.cmb2.listing_business_contact.listing_address.replaceAll("\r","").replaceAll("\n","")??""}'
                                    />
                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/rounder_bg"
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        android:text="@string/description"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:paddingLeft="25dp"
                        android:paddingRight="25dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:background='@{lang.equals("en")?@drawable/chat_left_bg:@drawable/chat_right_bg}'
                        android:text='@{model.cmb2.listing_business_general.listing_description}'

                        />



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/rounder_bg"
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        android:text="@string/contact_details"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:layout_marginTop="20dp"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="25dp"
                        android:paddingRight="25dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:background="@drawable/chat_left_bg"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:layout_gravity="center_vertical"
                            >
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".6"
                                android:textColor="@color/colorPrimary"
                                android:textSize="15sp"
                                android:text="@string/email"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimary"
                                android:text=" :- "
                                />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.4"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:text='@{model.cmb2.listing_business_contact.listing_email??""}'


                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="8dp"
                            >
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".6"
                                android:textColor="@color/colorPrimary"
                                android:textSize="15sp"
                                android:text="@string/website"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimary"
                                android:text=" :- "
                                />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.4"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:text='@{model.cmb2.listing_business_contact.listing_website??""}'


                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="8dp"
                            >
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".6"
                                android:textColor="@color/colorPrimary"
                                android:textSize="15sp"
                                android:text="@string/phone"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimary"
                                android:text=" :- "
                                />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.4"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:text='@{model.cmb2.listing_business_contact.listing_phone??""}'


                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="8dp"
                            >
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".6"
                                android:textColor="@color/colorPrimary"
                                android:textSize="15sp"
                                android:text="@string/person"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimary"
                                android:text=" :- "
                                />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.4"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:text='@{model.cmb2.listing_business_contact.listing_person??""}'


                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="8dp"
                            >
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".6"
                                android:textColor="@color/colorPrimary"
                                android:textSize="15sp"
                                android:text="@string/address"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimary"
                                android:text=" :- "
                                />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.4"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:text='@{model.cmb2.listing_business_contact.listing_address??""}'


                                />
                        </LinearLayout>

                    </LinearLayout>

                    <!--
                                    android:background='@{lang.equals("en")?@drawable/chat_left_bg:@drawable/chat_right_bg}'
                    -->


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/rounder_bg"
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        android:text="@string/business_details"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:layout_marginTop="20dp"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="25dp"
                        android:paddingRight="25dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:background="@drawable/chat_left_bg"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:layout_gravity="center_vertical"
                            >
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".6"
                                android:textColor="@color/colorPrimary"
                                android:textSize="15sp"
                                android:text="@string/location"

                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimary"
                                android:text=" :- "
                                />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.4"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:text='@{model.cmb2.listing_business_contact.listing_address??""}'


                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="8dp"
                            >
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".6"
                                android:textColor="@color/colorPrimary"
                                android:textSize="15sp"
                                android:text="@string/slogan"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimary"
                                android:text=" :- "
                                />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.4"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:text='@{model.cmb2.listing_business_branding.listing_slogan??""}'


                                />
                        </LinearLayout>

                    </LinearLayout>



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/rounder_bg"
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        android:text="@string/opening_hours"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:layout_marginTop="20dp"
                        />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:background='@{lang.equals("en")?@drawable/chat_left_bg:@drawable/chat_right_bg}'
                        android:paddingLeft="25dp"
                        android:paddingRight="25dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        >

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recViewOpeningHours"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"


                            />
                        <TextView
                            android:id="@+id/tvNotAvailable"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:text="@string/not_av"
                            android:visibility="gone"

                            />
                    </FrameLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:textColor="@color/black"
                        android:textSize="14sp"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/rounder_bg"
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        android:text="@string/location_on_map"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:layout_marginTop="20dp"
                        />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="3dp"
                        app:cardCornerRadius="16dp"
                        app:cardBackgroundColor="@color/white"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="8dp"
                        >
                        <fragment
                            android:id="@+id/map"
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            android:name="com.technology.circles.apps.omanmade.activities_fragments.FragmentMapTouchListener"

                            />
                    </androidx.cardview.widget.CardView>



                </LinearLayout>
                <ProgressBar
                    android:id="@+id/progBar"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:id="@+id/tvNoData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="@string/no_data_to_show"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    />

            </FrameLayout>
        </ScrollView>
    </LinearLayout>
</layout>

